<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration>
    <jdbc>
        <!-- 配置需要的数据库的驱动，本例采用mysql -->
        <driver>com.mysql.jdbc.Driver</driver>
        <!-- 配置数据库地址 -->
        <url>jdbc:mysql://localhost:3306/test_jooq?useUnicode=true&amp;characterEncoding=UTF-8&amp;serverTimezone=Asia/Shanghai&amp;useSSL=false&amp;allowMultiQueries=true</url>
        <!-- 配置数据库用户名-->
        <user>root</user>
        <!-- 配置数据库密码-->
        <password>root</password>
    </jdbc>
    <generator>
        <!-- 代码生成器 -->
        <name>org.jooq.codegen.JavaGenerator</name>
        <database>
            <!--强制为scheme1模式下所有的含有id域生成id-->
            <syntheticPrimaryKeys>test_jooq\..*\.id</syntheticPrimaryKeys>
            <!--是否重写主键-->
            <overridePrimaryKeys>override_primmary_key</overridePrimaryKeys>

            <name>org.jooq.meta.mysql.MySQLDatabase</name>

            <!--include和exclude用于控制为数据库中哪些表生成代码-->
            <includes>.*</includes>
            <!--<excludes></excludes>-->

            <!--数据库名称-->
            <inputSchema>test_jooq</inputSchema>
        </database>

        <generate>
            <!--是否生成dao和pojo-->
            <daos>true</daos>
            <pojos>true</pojos>
            <!--是否把数据库时间类型映射到java 8时间类型-->
            <javaTimeTypes>true</javaTimeTypes>
            <!--<interfaces>true</interfaces>-->
            <!--是否在生成的代码中添加spring注释，比如@Repository-->
            <springAnnotations>false</springAnnotations>
        </generate>

        <target>
            <!--生成代码文件的包名及放置目录-->
            <packageName>com.iscas.biz.jooq.test.code</packageName>
            <directory>biz-jooq/src/main/java</directory>
        </target>
    </generator>
</configuration>
